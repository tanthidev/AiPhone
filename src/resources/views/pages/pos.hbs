<div class="relative p-2 grid grid-cols-3 gap-2 w-full h-full">
    {{!-- Products --}}
    <div class="col-span-2 bg-white h-full rounded-lg p-2">
        {{!-- Category product --}}
        <div>
            <table class="w-full text-base" id="menu_iphone">
                <tr class="grid grid-cols-4">
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 15 Series
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 14 Series
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 13 Series
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 12 Series
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 11 Series
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone XS | XSMax
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone X | XR
                    </td>
                    <td class="hover:bg-gray-400 hover:text-white cursor-pointer">
                        Iphone 7 | 8 Series
                    </td>
                </tr>
            </table>
        </div>
        <br>
        {{!-- Items --}}
        <div class="overflow-scroll overflow-x-hidden">
            <div class="grid grid-cols-6 gap-3 ">
                {{#each data}}
                    <div class="relative flex justify-center text-center cursor-pointer p-2 border rounded-lg">
                        <div>
                            <img src="https://www.apple.com/v/iphone/home/bp/images/overview/compare/compare_iphone_15_pro__c344odaqs5qq_large.png"/>
                            <h2 class="font-semibold text-xl">Iphone 15 Pro</h2>
                            <span class="text-base">Từ 28.990.000đ</span>
                        </div>
                        <div class="absolute w-full h-full opacity-30 top-0 hover:bg-gray-400 rounded-lg">

                        </div>
                    </div>
                                    

                {{/each}}

            </div>
        </div>
    </div>


    {{!-- Order list --}}
    <div class="bg-white h-full rounded-lg p-3">
        
        {{!--  --}}
        <div class="h-2/3 flex flex-col border-b-2 mb-2">
            <h1 class="font-bold text-xl">List Order</h1>
            <div class="my-2 pb-3 border-b-2 flex justify-between">
                <button class="bg-gray-200 text-black py-2 px-4 rounded flex items-center hover:bg-gray-300">
                    <i class="fas fa-plus mr-2"></i>
                    Add Customer
                </button>

                <div class="flex gap-2">
                    {{!-- Barcode --}}
                    <button class="bg-gray-200 text-black py-2 px-4 rounded flex items-center hover:bg-gray-300">
                        <i class="fa-solid fa-barcode"></i>
                    </button>

                    {{!-- remove order --}}
                    <button class="bg-gray-200 text-red-500 py-2 px-4 rounded flex items-center hover:bg-gray-300">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </div>

            </div>

            {{!-- List Items --}}
            <div class="flex-1 mt-2 overflow-scroll">

                {{!-- Item --}}
                <div class="relative px-2 rounded my-2 py-3 bg-gray-100">
                    <div class="block">
                        <div onclick="toggleDropdown(1)" class="flex justify-between items-center cursor-pointer">
                            <div class="flex gap-4 items-center">
                                <div>
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                                {{!-- image --}}
                                <div>
                                    <img 
                                        class="h-10"
                                        src="https://www.apple.com/v/iphone/home/bp/images/overview/compare/compare_iphone_15_pro__c344odaqs5qq_large.png"/>
                                </div>
                                {{!-- Name --}}
                                <span>iPhone 15 Pro Max 1TB</span>
                            </div>

                            <div class="flex gap-4">
                                {{!-- price --}}
                                <span>2000$</span>
                                {{!-- Delete product --}}
                                <div class="text-gray-500">
                                    <i class="fa-solid fa-circle-xmark"></i>
                                </div>
                            </div>
                        </div>

                        {{!-- Dropdown --}}
                        <div id="dropdown1" class="hidden bg-transparent mt-2 text-sm px-4 w-full">
                            <div class="flex justify-between mb-2">
                                <span>Quantity:</span>
                                <input type="number" class="border border-gray-300 w-16 text-center" value="1" />
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Product Code:</span>
                                <span>ABC123</span>
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Color:</span>
                                <span>Blue</span>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Item --}}
                <div class="relative px-2 rounded my-2 py-3">
                    <div class="block">
                        <div onclick="toggleDropdown(2)" class="flex justify-between items-center cursor-pointer">
                            <div class="flex gap-4 items-center">
                                <div>
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                                {{!-- image --}}
                                <div>
                                    <img 
                                        class="h-10"
                                        src="https://www.apple.com/v/iphone/home/bp/images/overview/compare/compare_iphone_15_pro__c344odaqs5qq_large.png"/>
                                </div>
                                {{!-- Name --}}
                                <span>iPhone 15 Pro Max 1TB</span>
                            </div>

                            <div class="flex gap-4">
                                {{!-- price --}}
                                <span>2000$</span>
                                {{!-- Delete product --}}
                                <div class="text-gray-500">
                                    <i class="fa-solid fa-circle-xmark"></i>
                                </div>
                            </div>
                        </div>

                        {{!-- Dropdown --}}
                        <div id="dropdown2" class="hidden bg-white mt-2 text-sm px-4 w-full">
                            <div class="flex justify-between mb-2">
                                <span>Quantity:</span>
                                <input type="number" class="border border-gray-300 w-16" />
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Product Code:</span>
                                <span>ABC123</span>
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Color:</span>
                                <span>Blue</span>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- item --}}
                <div class="relative px-2 rounded my-2 py-3 bg-gray-100">
                    <div class="block">
                        <div onclick="toggleDropdown(3)" class="flex justify-between items-center cursor-pointer">
                            <div class="flex gap-4 items-center">
                                <div>
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                                {{!-- image --}}
                                <div>
                                    <img 
                                        class="h-10"
                                        src="https://www.apple.com/v/iphone/home/bp/images/overview/compare/compare_iphone_15_pro__c344odaqs5qq_large.png"/>
                                </div>
                                {{!-- Name --}}
                                <span>iPhone 15 Pro Max 1TB</span>
                            </div>

                            <div class="flex gap-4">
                                {{!-- price --}}
                                <span>2000$</span>
                                {{!-- Delete product --}}
                                <div class="text-gray-500">
                                    <i class="fa-solid fa-circle-xmark"></i>
                                </div>
                            </div>
                        </div>

                        {{!-- Dropdown --}}
                        <div id="dropdown3" class="hidden bg-white mt-2 text-sm px-4 w-full">
                            <div class="flex justify-between mb-2">
                                <span>Quantity:</span>
                                <input type="number" class="border border-gray-300 w-16" />
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Product Code:</span>
                                <span>ABC123</span>
                            </div>
                            <div class="flex justify-between mb-2">
                                <span>Color:</span>
                                <span>Blue</span>
                            </div>
                        </div>
                    </div>
                </div>


                

            </div>
        </div>
        

        {{!-- Option pay --}}
        <div class="h-1/3 flex flex-col justify-between">
            <div>
                {{!-- Price --}}
                <div class="px-12">
                    <div class="flex justify-between">
                        <span>Subtotal:</span>
                        <span>1500$</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Tax</span>
                        <span>75$</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-semibold">Grand Total</span>
                        <span>1575$</span>
                    </div>
                </div>

                {{!-- method pay --}}
                <div class="input-radio image grid grid-cols-3 gap-3 mt-3">
                    {{!-- Cash --}}
                    <div class="flex flex-cols justify-center">
                        <input class="hidden" type="radio" id="cash" name="methodpayment" value="cash">
                        <label for="cash">
                            <div id="img-area" class="h-14 flex flex-col justify-between text-gray-400 px-5">
                                <img class="h-6 mt-1" src="/images/cash.png">
                                <span class="text">Cash</span>
                            </div>
                        </label>
                    </div>

                    {{!-- Debit --}}
                    <div class="flex flex-cols justify-center">
                        <input class="hidden" type="radio" id="debit" name="methodpayment" value="debit">
                        <label for="debit">
                            <div id="img-area" class="h-14 flex flex-col justify-between text-gray-400 py-2 px-5">
                                <img class="h-6" src="/images/debit.png">
                                <span class="text">Debit</span>
                            </div>
                        </label>
                    </div>
                    {{!-- Scan --}}
                    <div class="flex flex-cols justify-center">
                        <input class="hidden" type="radio" id="scan" name="methodpayment" value="scan">
                        <label for="scan">
                            <div id="img-area" class="h-14 flex flex-col justify-between text-gray-400 py-2 px-5">
                                <img class="h-6" src="https://dreamspos.dreamguystech.com/html/template/assets/img/icons/scan.svg">
                                <span class="text">Scan</span>
                            </div>
                        </label>
                    </div>

                    

                </div>
            </div>

            {{!-- Button Pay --}}
            <div class="flex justify-end items-center">
                <div class="m-3">
                    <button class="bg-white text-gray-800 font-bold rounded-md border-b-4 border-blue-500 hover:border-blue-600 hover:bg-blue-500 hover:text-white shadow-2xl py-2 px-6 inline-flex items-center ">
                        <span class="mr-2">Pay</span>
                        <i class="fa-regular fa-money-bill-1"></i>
                    </button>
                </div>
            </div>


        </div>
    </div>
</div>

<script>
    function toggleDropdown(n) {
        const dropdown = document.getElementById('dropdown'+n);
        dropdown.classList.toggle('hidden');
    }



</script>