
    <div class="max-w-md mx-auto bg-white shadow-md p-8 rounded-md">
        <h1 class="text-2xl font-bold mb-6">Edit User</h1>
        <form method="post" action="/admin_employee/updateOne-employee-{{employee._id}}">
            <div class="mb-4">
                <label for="name" class="block text-sm font-semibold mb-2">Name</label>
                <input value="{{employee.employee_name}}" type="text" id="name" name="employee_name" class="w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500" placeholder="Enter Name">
            </div>
            <div class="mb-4">
                <label for="phone" class="block text-sm font-semibold mb-2">Phone</label>
                <input type="text" value="{{employee.employee_phone}}" id="phone" name="employee_phone" class="w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500" placeholder="Enter Phone">
            </div>
            <div class="mb-4">
                <label for="email" class="block text-sm font-semibold mb-2">Email</label>
                <input type="email" id="email" value="{{employee.employee_email}}" name="employee_email" class="w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500" placeholder="Enter Email">
            </div>
            <div class="mb-4">
                <label for="status" class="block text-sm font-semibold mb-2">Status</label>
                <select id="status" value="{{employee.account_status}}" name="account_status" class="w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                    <option value="block">Block</option>
                </select>
            </div>
            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:bg-blue-600">Save Changes</button>
            </div>
        </form>
    </div>
