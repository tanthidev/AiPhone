<h1>Add an Employee</h1>
<form method="post" action="/admin_employee/updateOne-employee-{{employee._id}}" enctype="multipart/form-data">
  <div class="form-group">          
    <label for="employee_name">Name</label>
    <input type="input" class="form-control" value="{{employee.employee_name}}" id="employee_name" name="employee_name" placeholder="Name">
  </div>
    <div class="form-group">
    <label for="employee_phone">Phone</label>
    <input type="input" class="form-control" value="{{employee.employee_phone}}" id="employee_phone" name="employee_phone" placeholder="Phone">
  </div>
  <div class="form-group">
    <label for="employee_email">Email</label>
    <input type="input" class="form-control" value="{{employee.employee_email}}" id="employee_email" name="employee_email" placeholder="Email">
  </div>
   <div class="form-group">
    <label for="account_status">Status</label>
    <input type="input" class="form-control" value="{{employee.account_status}}" id="account_status" name="account_status" placeholder="Status">
  </div>
  <div class="form-group">
    <label for="username">User Name</label>
    <input type="input" class="form-control" value="{{employee.username}}" id="username" name="username" placeholder="username">
  </div>
{{!-- <div class="form-group">
    <label for="password">Password</label>
    <input type="input" class="form-control" value="{{employee.password}}" id="password" name="password" placeholder="password">
  </div> --}}
  <div class="form-group">
    <label for="profile_picture">Avatar</label>
    <input type="file" class="form-control" value="{{employee.profile_picture}}" id="profile_picture" name="profile_picture" placeholder="Avatar">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>