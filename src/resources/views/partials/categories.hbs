

<div class="w-64 bg-white h-screen pt-2 text-base pl-2 flex flex-col">
    {{!-- Logo --}}
    <div class="sticky">
        <a href="/">
            <img 
            class="w-20 rounded m-auto" 
            src="/images/logo.png"/> 
        </a>         
    </div>

    {{!-- Category --}}
    <div class="overflow-scroll overflow-x-hidden flex-1">
        {{!-- Sale --}}
        <div class="border-b mb-3">
            <h6 class="font-semibold">Sale</h6>
            <ul>
                {{!-- POS --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/pos" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-inbox"></i>
                        </div>
                        <span>POS</span>
                    </a>
                </li>
                
                {{!-- Invoices --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/invoice" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-file-lines"></i>
                        </div>
                        <span>Invoices</span>
                    </a>
                </li>
            </ul>

        </div>

        {{!-- Products --}}
        <div class="border-b mb-3">
            <h6 class="font-semibold">Products</h6>

            {{!-- Products --}}
            <ul>
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/productlist" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-box"></i>
                        </div>
                        <span>Products</span>
                    </a>
                </li>
            </ul>
        </div>

        {{!-- Peoples --}}
        <div class="border-b mb-3">
            <h6 class="font-semibold">Peoples</h6>

            <ul>
                {{!-- Customers --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/customer" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <span>Customers</span>
                    </a>
                </li>
                <div class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white relative">
                    <a href="#" class="flex items-center" onclick="toggleAdminMenu(event)">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-users"></i>
                        </div>
                        <span>Admin Manage</span>
                    </a>
                    
                    <!-- Drop-down content -->
                    <div id="adminMenu" class="hidden bg-gray-200 border rounded-sm mt-2 space-y-1">
                        <!-- Employee -->
                        <div class="pl-3 py-2 hover:bg-gray-400 hover:text-black">
                            <i class="fa-solid fa-diamond-turn-right"></i>
                            <a href="/admin_employee">Employee</a>
                        </div>
                        
                        <!-- Customer -->
                        <div class="pl-3 py-2 hover:bg-gray-400 hover:text-black">
                            <i class="fa-solid fa-diamond-turn-right"></i>
                            <a href="/admin_customer">Customer</a>
                        </div>
                        
                        <!-- Invoice -->
                        <div class="pl-3 py-2 hover:bg-gray-400 hover:text-black">
                            <i class="fa-solid fa-diamond-turn-right"></i>
                            <a href="/admin_invoice">Invoice</a>
                        </div>
                        
                        <!-- Product -->
                        <div class="pl-3 py-2 hover:bg-gray-400 hover:text-black">
                            <i class="fa-solid fa-diamond-turn-right"></i>
                            <a href="/admin_product">Product</a>
                        </div>
                    </div>
                </div>

                {{!-- Employees --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/employee" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-user-check"></i>
                        </div>
                        <span>Employees</span>
                    </a>
                </li>
            </ul>
        </div>

        {{!-- Reports --}}
        <div class="border-b mb-3">
            <h6 class="font-semibold">Reports</h6>
            <ul>
                {{!-- Sales report --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/report/sale" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-chart-simple"></i>
                        </div>
                        <span>Sales Report</span>
                    </a>
                </li>

                
            </ul>
        </div>
        


    </div>


    {{!-- Setting --}}
    <div class="border-b mb-3">
            <h6 class="font-semibold">Setting</h6>
            <ul>
                {{!-- Setting --}}
                <li class="pl-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <a href="/setting" class="flex">
                        <div class="w-1/5 text-xl">
                            <i class="fa-solid fa-gear"></i>
                        </div>
                        <span>Setting</span>
                    </a>
                </li>
                
                {{!-- Logout --}}
                <li class="px-3 py-2 font-normal cursor-pointer rounded-sm hover:bg-gray-400 hover:text-white">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-1/5 text-xl rounded-full overflow-hidden">
                                <img src={{user.profile_picture}}/>
                            </div>
                            <span>{{user.employee_name}}</span>
                        </div>
                        <a href="/logout" class="w-1/5 text-xl">
                            <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        </a>
                    </div>
                </li>
            </ul>
    </div>     
</div> 
<script>
    function toggleAdminMenu(event) {
        event.preventDefault();
        var adminMenu = document.getElementById("adminMenu");
        adminMenu.classList.toggle("hidden");

        // Insert adminMenu after the "Admin Manage" link
        var adminManageLink = event.currentTarget.parentNode;
        adminManageLink.parentNode.insertBefore(adminMenu, adminManageLink.nextSibling);
    }
</script>
