<div class="w-full h-20 flex justify-between items-center bg-white px-3 relative">

    <div class="flex w-full items-center">
        {{!-- Logo --}}
        <div class="mr-10">
            <a href="/">
                <img 
                class="w-20 rounded" 
                src="/images/logo.png"/> 
            </a>         
        </div>

        {{!-- Search --}}
        <div class="xl:w-1/3 w-1/2  h-10 rounded-full overflow-hidden">
            <form class="bg-gray-100 px-1 flex items-center">
                <input 
                    type="text" 
                    class="bg-gray-100 h-10 w-full min-w-fit border-none ml-2 outline-none text-base" 
                    placeholder="Search products..."/>
                    
                {{!-- Submit --}}
                <button class="px-5 h-8 rounded-full hover:bg-gray-400 hover:text-white"> 
                    <i class="fa-solid fa-magnifying-glass "></i>
                </button>
            </form>
        </div>
    </div>

    {{!--  --}}
    <div class="flex gap-5">
        {{!-- Language --}}
        <div class="h-10 w-10 text-2xl text-black rounded-md cursor-pointer flex items-center justify-center hover:bg-gray-400 hover:text-white"> 
            <i class="fa-sharp fa-solid fa-globe"></i>
        </div>

        {{!-- Full Screen --}}
        <div
            class="h-10 w-10 text-2xl text-black rounded-md cursor-pointer flex items-center justify-center hover:bg-gray-400 hover:text-white"
            id="fullscreenButton"
        > 
            <i class="fa-solid fa-expand"></i>
        </div>

        {{!-- Mail --}}
        <div class="h-10 w-10 text-2xl text-black rounded-md cursor-pointer flex items-center justify-center hover:bg-gray-400 hover:text-white"> 
            <i class="fa-regular fa-envelope"></i>
        </div>
         {{!-- Notify --}}
        <div class="h-10 w-10 text-2xl text-black rounded-md cursor-pointer flex items-center justify-center hover:bg-gray-400 hover:text-white"> 
            <i class="fa-regular fa-bell"></i>
        </div>
    </div>
</div>

<script>
    const fullscreenButton = document.getElementById('fullscreenButton');
    fullscreenButton.addEventListener('click', function() {
        if (document.fullscreenElement) {
            document.exitFullscreen().catch((err) => {
                console.error(`Error attempting to exit full-screen mode: ${err.message}`);
            });
        } else {
            document.documentElement.requestFullscreen().catch((err) => {
                console.error(`Error attempting to enable full-screen mode: ${err.message}`);
            });
        }
    });
</script>